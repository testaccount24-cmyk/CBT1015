/* REXX EXEC SPLIT LINE AFTER COL 72 */
/* SQL TO SPUFI                      */
/*                                   */
"ISREDIT MACRO"
"ISREDIT RESET"
"ISREDIT (LASTLINE) = LINENUM .ZLAST"

I = 0
DO FOREVER
   I = I+1
   IF I > LASTLINE THEN LEAVE

   "ISREDIT (HOLD1) = LINE "I
   HOLD1 = STRIP(HOLD1, "T")
   HOLD1 = STRIP(HOLD1)
   IF LENGTH(HOLD1) > 72  THEN DO
      ISREDIT TSPLIT  I 73
      "ISREDIT (LASTLINE) = LINENUM .ZLAST"
    END
END
EXIT
