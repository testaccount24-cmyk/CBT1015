/* REXX EXEC SPLIT LINE AFTER COL 72 */
/* SQL TO SPUFI                      */
/*                                   */
"ISREDIT MACRO NOPROCESS"
"ISREDIT RESET"
"ISREDIT (LASTLINE) = LINENUM .ZLAST"

I = 0
DO FOREVER
   I = I+1
   IF I > LASTLINE THEN LEAVE

   "ISREDIT (HOLD1) = LINE "I
   HOLD1 = STRIP(HOLD1, "T")
   ISAVE = I
   IF LENGTH(HOLD1) > 72  THEN DO WHILE LENGTH(HOLD1) > 72
      DO WHILE LENGTH(HOLD1) > 0
         ZEILE = SUBSTR(HOLD1, 1, 72)
         HOLD1 = SUBSTR(HOLD1, 73)
         ADDRESS ISREDIT "LINE_AFTER "I" = (ZEILE) "
         I = I + 1
       END
      ADDRESS ISREDIT "DELETE "ISAVE
      I = I - 1
      "ISREDIT (LASTLINE) = LINENUM .ZLAST"
    END
END
EXIT
