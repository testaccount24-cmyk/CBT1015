     Select
       WHEN GrantRT_Val = "Y" Then    Grant = "YES"
       WHEN GrantRT_Val = "J" Then    Grant = "YES"
       Otherwise                      Grant = "NO"
      End

     Call GEN_SPROC_DDL
     Grant = "NO"
   End
  tdiff = time_diff(start_zeit, time() );
 End
