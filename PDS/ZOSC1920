              "     , STRIP(TB.DBNAME)  AS DBNAME  ",
              "     , STRIP(TB.TSNAME)  AS TSNAME  ",
              "     , STRIP(TB.CREATOR) AS CREATOR ",
              "     , STRIP(TB.NAME   ) AS NAME    ",
              "     , TB.CREATEDTS      AS CREATEDTS" ,
              "FROM "SYSIBMS".SYSTABLES     TB",
