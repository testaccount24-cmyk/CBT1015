 CALL MAKE_WHERELIST "TB.DBNAME", DB2_CREATOR1
 CALL MAKE_WHERELIST "TB.TSNAME", DB2_NAME1
 if auswahl = "TS" THEN DO
    TTYPE = "'T', 'C', 'G', 'H', 'P', 'R', 'X'"
  End
 Else do
