ok = NSL("-- SELECT TABLESPACES  die kein UTS sind                    ")
ok = NSL("SELECT CHAR(RTRIM(TB.DBNAME)  CONCAT '.'                    ")
ok = NSL("CONCAT RTRIM(TB.TSNAME), 20)                                ")
ok = NSL("       AS TSNAME                                            ")
ok = NSL("     , CHAR(RTRIM(TB.CREATOR) CONCAT '.'                    ")
ok = NSL("     CONCAT RTRIM(TB.NAME), 50)                             ")
ok = NSL("       AS TBNAME                                            ")
