       end
      when auswkz = 'LO' then do
           parse value CZeile with lo value(crlf) ,
                                   lk value(crlf) ,
                                   .
       end
      when auswkz = 'LU' then do
           parse value CZeile with lu value(crlf) ,
                                   .
       end
      when auswkz = 'IPN' then do
           parse value CZeile with lk value(crlf) ,
