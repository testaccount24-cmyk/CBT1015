       end
      when auswkz = 'PLA'  then do
           parse value CZeile with go value(crlf) ,
                                   ge value(crlf) ,
                                   nm value(crlf) ,
                                  dts value(crlf) ,
                                   .
       end
      when auswkz = 'TP' then do
           parse value CZeile with pa value(crlf) ,
                                   db value(crlf) ,
                                   ts value(crlf) ,
                                 vsam value(crlf) ,
                                    .
       end
      when auswkz = 'KC' then do
           parse value CZeile with nm value(crlf) ,
                                   cr value(crlf) ,
                                   co value(crlf) ,
                                   cn value(crlf) ,
                                   cs value(crlf) ,
                                   or value(crlf) ,
                                   Tc value(crlf) ,
                                   Tn value(crlf) ,
                                   .
       end
      when auswkz = 'TG' Then do
           parse value CZeile with nm value(crlf) ,
                                   cr value(crlf) ,
                                   tn value(crlf) ,
                                   tc value(crlf) .

       end
      When auswkz = 'AL'   THEN DO
           parse value CZeile with cr value(crlf) ,
                                   nm value(crlf) ,
                                   TY value(crlf) ,
                                   lc value(crlf) ,
                                   tc value(crlf) ,
                                   tn value(crlf) ,
