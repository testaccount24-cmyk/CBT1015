         END
      When auswkz = 'SY'   THEN DO
           parse value CZeile with cr value(crlf) ,
                                   nm value(crlf) ,
                                   tc value(crlf) ,
                                   tn value(crlf) ,
                                   .

         END
      when auswkz = 'SE' Then do
           parse value CZeile with sc value(crlf) ,
                                   sn value(crlf) ,
                                   ty value(crlf) ,
                                   ID value(crlf) ,
                                   IC value(crlf) ,
                                   DC value(crlf) ,
                                   DN value(crlf) ,
                                  COL value(crlf) ,
                                   .

       end
      when auswkz = 'PK' Then do
           parse value CZeile with co value(crlf) ,
                                   tc value(crlf) ,
                                   tn value(crlf) ,
                                   cr value(crlf) ,
                                   ty value(crlf) ,
                                   ic value(crlf) ,
                                   in value(crlf) ,
                                   .
       end
      when auswkz = 'RT' Then do
           parse value CZeile with tc value(crlf) ,
                                   tn value(crlf) ,
                                   tp value(crlf) ,
                                   nm value(crlf) ,
                                   ln value(crlf) ,
                                   id value(crlf) ,
                                orgin value(crlf) ,
                                ftype value(crlf) ,
                                   .

           select
             when (eingabe = "DDL"  | eingabe = "HDDL" ) ,
                & ty <> 'I' Then Do
                  CMDLine.0  = 0
                  object1    = Strip(nm)
                  object2    = Strip(tc) || '.' || strip(tn)
                  call AUFRUF_ZOSA1920
                  auswahlok = 'N'
               end
             otherwise nop
           end
       end
      when auswkz = 'CO' Then do
           parse value CZeile with tc value(crlf) ,
                                   tn value(crlf) ,
                                   cn value(crlf) ,
                                   nm value(crlf) ,
                                   .
           auswahlok = 'Y'
       end
      when auswkz = 'VO' Then do
           parse value CZeile with sn value(crlf) ,
                                   sc value(crlf) ,
                                   vo value(crlf) ,
                                   .

       end
      when auswkz = 'SR' Then do
           parse value CZeile with so value(crlf) ,
                                   tg value(crlf) ,
                                   .

       end
      when auswkz = 'PL' Then do
           parse value CZeile with na value(crlf) ,
                                   cr value(crlf) ,
                                   .
       end
      when auswkz = 'PG' Then do
           parse value CZeile with lo value(crlf) ,
                                   co value(crlf) ,
                                   nm value(crlf) ,
                                  ver value(crlf) ,
                                   .
       end
      when auswkz = 'CK' Then do
           parse value CZeile with tc value(crlf) ,
                                   tn value(crlf) ,
                                   cn value(crlf) ,
                                   .
           object1 = tc || "." || tn
           auswahlok = 'Y'
       end
      when auswkz = 'FK' then do
           parse value CZeile with tc value(crlf) ,
                                   tn value(crlf) ,
                                  rel value(crlf) ,
                                   rc value(crlf) ,
                                   rn value(crlf) ,
                                   .
       end
      when auswkz = 'IC' then do
           parse value CZeile with db value(crlf) ,
                                   ts value(crlf) ,
                                  tis value(crlf) ,
                                  dnr value(crlf) ,
                                  ict value(crlf) ,
                                  icd value(crlf) ,
                                 srba value(crlf) ,
                                 fseq value(crlf) ,
                                 devt value(crlf) ,
                                 IBMR value(crlf) ,
                                 DSN  value(crlf) ,
                                   .

       end
      when auswkz = 'RO' then do
           parse value CZeile with na value(crlf) ,
                                   cr value(crlf) ,
